    <scriptTask id="scripttask1" name="Script Task" scriptFormat="groovy" activiti:autoStoreVariables="false">
      <script><![CDATA[import com.collibra.dgc.core.api.component.instance.CommentApi
import com.collibra.dgc.core.api.dto.instance.comment.FindCommentsRequest
import com.collibra.dgc.core.api.dto.instance.comment.FindCommentsRequest.Builder
import com.collibra.dgc.core.api.component.user.UserApi
import com.collibra.dgc.core.api.dto.instance.comment.AddCommentRequest
import com.collibra.dgc.core.api.model.ResourceType

def getUser(userId){
    user = userApi.getUser(userId)
    user = "${user.getFirstName()} ${user.getLastName()} "
}
def getComments(){
    comments = commentApi.findComments(
        FindCommentsRequest.builder()
        .baseResourceId(item.getId())
        .build()
    ).getResults()
    loggerApi.info("---> ${comments}")
    if(comments.size() != 0){
        comments.each{
           content = it.getContent()
           createdBy = it.getCreatedBy()
           comment = "${getUser(createdBy)}: <BR> ${content}"
           makecomment(copycomments,comment)
           
        }
    }
}

def makecomment(assetId,comment){
     commentApi.addComment(AddCommentRequest.builder()
            .baseResourceId(assetId)
            .baseResourceType(ResourceType.Asset)
            .content(comment.toString())
            .build()
        )
        loggerApi.info("Done!")
}

getComments()]]></script>
    </scriptTask>
    <sequenceFlow id="flow1" sourceRef="startevent1" targetRef="scripttask1"></sequenceFlow>
    <endEvent id="endevent1" name="End"></endEvent>
